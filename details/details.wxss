.body {
  background: #f3f5f7;
  position: relative;
}

.back {
  position: absolute;
  top: 30rpx;
  z-index: 20;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.swiper {
  height: 750rpx;
}

.title {
  padding: 36rpx;
  background: #fff;
}

.title-name {
  font-size: 26rpx;
  font-weight: bold;
  display: block;
  color: rgb(7, 17, 27);
  line-height: 28rpx;
}

.title-name2, .title-name3 {
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  line-height: 20rpx;
  padding-right: 24rpx;
}

.shop-price {
  font-size: 30rpx;
  font-weight: 700;
  color: rgb(240, 20, 20);
  line-height: 48rpx;
}

.shop>button {
  float: right;
  margin-right: 50rpx;
  background: rgb(110, 185, 235);
  color: #fff;
}

.shop-add {
  float: right;
}

.shop-add text {
  width: 55rpx;
  height: 50rpx;
  border: 1px solid rgb(110, 185, 235);
  border-radius: 30rpx;
  font-size: 40rpx;
  padding: 0 10rpx;
  margin: 0 5rpx;
}

.shop-add text:nth-child(1), .shop-add text:nth-child(3) {
  background: rgb(110, 185, 235);
  color: #fff;
}

.jieshao {
  padding: 15rpx 36rpx;
  background: #fff;
  margin-top: 25rpx;
}

.jieshao-title {
  font-size: 30rpx;
}

.jieshao text {
  font-size: 25rpx;
  color: rgb(77, 85, 93);
  line-height: 30rpx;
}

.pingjia {
  padding: 15rpx 36rpx;
  margin-top: 25rpx;
  background: #fff;
}

.pingjia-btn {
  border-bottom: 1px solid #ccc;
}

.pingjia-btn button {
  margin: 10rpx;
  background: rgba(181, 229, 248, 0.836);
}

.zi {
  padding: 5rpx 0;
  border-bottom: 1px solid #ccc;
}

.zi icon {
  padding: 20rpx 0;
}

.zi text {
  color: #ccc;
  font-size: 25rpx;
}

.pjnr{
  padding-bottom: 30rpx;
}
.pjnr p:nth-child(1) {
  font-size: 25rpx;
  color: #ccc;
  display: block;
  padding: 20rpx 0;
  width: 100%;
  height: 30rpx;
}

.pjnr p:nth-child(1) text {
  float: left;
}

.pjnr p:nth-child(1) .img {
  width: 45rpx;
  height: 45rpx;
  border-radius: 20rpx;
  float: right;
}

.pjnr p:nth-child(1) .aa {
  float: right;
}

.pjnr view {
  font-size: 20rpx;
}
